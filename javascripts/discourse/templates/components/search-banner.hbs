{{#if shouldDisplay}}
    <div class="custom-search-banner flex align-center">
        <div class="wrap custom-search-banner-wrap flex flex-wrap md:gap-[10vw] gap:10">
            <h1 class="leading-tight text-7xl font-display text-black tracking-wider font-normal">{{{theme-i18n
                    "search_banner.headline"}}}</h1>

            <div class="flex flex-col flex-wrap content-center justify-evenly mt-2 gap-12">
                {{mount-widget widget="search-widget"}}
                <div class="flex flex-row gap-10 items-center">
                    <p>{{theme-i18n "search_banner.or" }}</p>
                    {{mount-widget widget="create-topic"}}
                </div>
            </div>
        </div>

    </div>
{{/if}}


